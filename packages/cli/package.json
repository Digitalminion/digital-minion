{
  "name": "@digital-minion/cli",
  "version": "1.4.1",
  "description": "Task Management CLI for Teams and AI Agents - A modular CLI for managing tasks in Asana projects",
  "main": "dist/digital-minion-cli.js",
  "types": "dist/digital-minion-cli.d.ts",
  "bin": {
    "dm": "dist/digital-minion-cli.js"
  },
  "scripts": {
    "build": "node build.js",
    "build:prod": "cross-env NODE_ENV=production node build.js",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf ./dist",
    "dev": "node build.js --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build:prod && npm run build:types"
  },
  "keywords": [
    "cli",
    "task-management",
    "asana",
    "agent",
    "ai",
    "automation",
    "workflow",
    "productivity"
  ],
  "author": "Digital Minion",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Digitalminion/digital-minion.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/Digitalminion/digital-minion#readme",
  "bugs": {
    "url": "https://github.com/Digitalminion/digital-minion/issues"
  },
  "dependencies": {
    "@digital-minion/lib": "^1.0.0",
    "commander": "^14.0.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/prompts": "^2.4.9",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
