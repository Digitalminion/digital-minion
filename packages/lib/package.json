{
  "name": "@digital-minion/lib",
  "version": "1.0.2",
  "description": "Core library for Digital Minion task management",
  "main": "dist/digital-minion-lib.js",
  "types": "dist/digital-minion-lib.d.ts",
  "scripts": {
    "build": "node build.js",
    "build:prod": "cross-env NODE_ENV=production node build.js",
    "clean": "rimraf ./dist",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "task-management",
    "asana",
    "agent",
    "ai",
    "automation",
    "library"
  ],
  "author": "Digital Minion",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Digitalminion/digital-minion.git",
    "directory": "packages/lib"
  },
  "homepage": "https://github.com/Digitalminion/digital-minion#readme",
  "bugs": {
    "url": "https://github.com/Digitalminion/digital-minion/issues"
  },
  "devDependencies": {
    "@types/asana": "^0.18.16",
    "@types/chai": "^5.2.2",
    "@types/node": "^24.7.0",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.1.0",
    "esbuild": "^0.25.10",
    "rimraf": "^6.0.1",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
